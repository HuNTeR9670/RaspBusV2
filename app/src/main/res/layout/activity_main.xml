<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:com.toxa.RaspBusMVP.context="com.toxa.RaspBusMVP.View.MainActivity" tools:ignore="ExtraText">
    <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                 tools:ignore="MissingConstraints"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginTop="300dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginLeft="160dp" android:layout_marginStart="160dp"
                 app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
                 android:id="@+id/progres" style="@style/Widget.AppCompat.ProgressBar"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="388dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="4dp"
            tools:layout_editor_absoluteX="12dp"
            android:id="@+id/Route_list" tools:listitem="@layout/route_item"
            tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>